<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/evento_adapter_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="3dp" >

    <ImageView
        android:id="@+id/ivFlayer"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/crop_flayer" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/ivFlayer"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/lblNome"
            style="@style/EventName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="nome" />

        <TextView
            android:id="@+id/lblLocal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Local" />

        <TextView
            android:id="@+id/evento_adapter_txt_data"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="data" />
    </LinearLayout>

</RelativeLayout>